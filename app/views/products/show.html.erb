<div class="row">
  <div class="col-lg-12">
    <h1>Product Details</h1>
    <%= link_to "Back to products", products_path, class: 'btn btn-primary' %>
    <%= link_to "Edit", edit_product_path(@product), class: 'btn btn-primary' %>
    <%= link_to "Create log", new_log_product_path(@product), class: 'btn btn-primary' %>
    <%= link_to "Download logs", product_path(@product, format: :xlsx), class: 'btn btn-success' %>
    <div class="card" style="padding: 20px;">
      <table class="table">
        <tr>
          <td><b>Product Name:</b></td>
          <td><%= @product.name %></td>
        </tr>
        <tr>
          <td><b>Reference:</b></td>
          <td><%= @product.reference %></td>
        </tr>
        <tr>
          <td><b>Quantity:</b></td>
          <td><%= @product.quantity %></td>
        </tr>
        <tr>
          <td><b>Description:</b></td>
          <td><%= @product.description %></td>
        </tr>
        <tr>
          <td><b>Created at:</b></td>
          <td><%= @product.created_at %></td>
        </tr>
        <tr>
          <td><b>Updated at:</b></td>
          <td><%= @product.updated_at %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
<br>
<div class="row" style="margin-top: 20px">
  <div class="col-lg-12">
    <div class="card" style="padding: 20px; ">
      <h1>Logs</h1>
      <table class="table">
        <thead>
          <tr>
            <th>Type</th>
            <th>Quantity</th>
            <th>Comment</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% @product.logs.each do |log| %>
          <tr>
            <td><%= log.log_type_name %></td>
            <td><%= log.quantity %></td>
            <td><%= log.comment %></td>
            <td><%= log.created_at %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>