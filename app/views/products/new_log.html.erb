<h1>Create log</h1>
<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <table class="table">
        <tr>
          <td><b>Name:</b></td>
          <td><%= @product.name %></td>
        </tr>
        <tr>
          <td><b>Reference:</b></td>
          <td><%= @product.reference %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
<div class="row mt-5">
  <div class="col-lg-12">
    <div class="card p-5">
      <%= form_with model: @log, url: create_log_product_path(@product) do |f| %>
      <% if @log.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @log.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label :log_type, "Log Type" %>
        <%= f.select :log_type, options_for_select(Log.get_log_types,@log.log_type), {}, {class: 'form-control'}  %>
      </div>
      <div class="form-group">
        <%= f.label :quantity, "Quantity" %>
        <%= f.number_field :quantity, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :comment, "Comment" %>
        <%= f.text_area :comment, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-primary' %>
        <%= link_to "Cancel", product_path(@product), class: 'btn btn-danger' %>
      </div>
      <% end %>
    </div>
  </div>
</div>